{
  "package": {
    "productName": "TauView",
    "version": "0.8.8"
  },
  "build": {
    "distDir": "../dist",
    "devPath": "http://localhost:5173",
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "open": true
      },
      "path": { "all": true },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["/**/*"]
      },
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "setTitle": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "jp.sprout2000.TauView",
      "icon": [
        "icons/icon.png",
        "icons/icon.ico",
        "icons/icon.icns",
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png"
      ],
      "copyright": "Â© 2022 sprout2000 and other contributors",
      "category": "Photography",
      "shortDescription": "Image Viewer",
      "longDescription": "A minimalist image viewer based on Leaflet.js and Tauri."
    },
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost"
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "title": "TauView",
        "width": 800,
        "height": 500,
        "minWidth": 800,
        "minHeight": 500,
        "visible": true,
        "resizable": true,
        "theme": "Dark"
      }
    ]
  }
}
